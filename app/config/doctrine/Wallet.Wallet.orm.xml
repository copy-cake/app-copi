<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Core\Domain\Model\Wallet\Wallet" table="wallet">

        <id name="id" type="guid" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="earnMoney" type="float" column="earn_money"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <field name="bankName" type="string" column="bank_name"/>
        <field name="bankNumber" type="string" column="bank_number" length="26"/>

        <field name="street" type="string" column="street"/>
        <field name="zipCode" type="string" column="zip_code" length="6"/>
        <field name="city" type="string" column="city" length="30"/>

        <one-to-one field="users" target-entity="App\Core\Domain\Model\Users\User" mapped-by="wallet">
        </one-to-one>

    </entity>
</doctrine-mapping>
